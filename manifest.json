{
  "name": "YouTube Voice",
  "description": "Make your browser speak!",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["/background_scripts/sub_fetch.js", "/background_scripts/background.js"]
  },
  "content_scripts": [{
    "all_frames": true,
    "js": [
        "/content_scripts/speech.js",
        "/content_scripts/youtube-script.js",
        "/content_scripts/inject.js"
    ],
    "html": [
      "/user_interface/settings.html"
    ],
    "matches": [
        "https://www.youtube.com/*"
    ],
    "run_at": "document_start"
  }],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "/images/YTV16.png",
    "32": "/images/YTV32.png",
    "48": "/images/YTV48.png",
    "128": "/images/YTV128.png"
  },
  "browser_action": {
    "default_icon": "/images/YTV128.png",
    "default_popup": "/user_interface/popup.html",
    "default_title:": "Youtube Voice popup."
  }
}